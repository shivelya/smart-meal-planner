{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test",
                "--collect:XPlat Code Coverage"
            ],
            // "command": "dotnet test --collect:\"XPlat Code Coverage\"; reportgenerator -reports:\"**/coverage.cobertura.xml\" -targetdir:\"coveragereport\"; start coveragereport/index.html",
            "options": {
                "cwd": "${workspaceFolder}/backend/Backend.Tests"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Generate Coverage Report",
            "type": "shell",
            "command": "reportgenerator",
            "args": [
                "-reports:**/coverage.cobertura.xml",
                "-targetdir:coveragereport"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend/Backend.Tests"
            },
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": []
        }
    ],
    "compounds": [
        {
            "label": "Run Tests and Generate Coverage Report",
            "dependsOn": [
                "Run Tests with Coverage",
                "Generate Coverage Report"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}