{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests with Coverage 2.0",
            "type": "shell",
            "command": "dotnet test /p:CollectCoverage=true /p:CoverletOutputFormat=cobertura /p:CoverletOutput=../TestResults/coverage.cobertura.xml; reportgenerator -reports:../TestResults/coverage.cobertura.xml -targetdir:../TestResults/coveragereport; start ../TestResults/coveragereport/index.html",
            "options": {
                "cwd": "${workspaceFolder}/backend/Backend.Tests"
            }
        }
    ]
}