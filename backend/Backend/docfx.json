{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../.",
          "files": [
            "**/*.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**"
          ]
        }
      ]
    }
  ],
  "build": {
    "content": [
      {
        "files": [
            "api/**.yml"
          ],
        "dest": "api",
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Smart Meal Planner",
      "_appTitle": "Smart Meal Planner",
      "_enableSearch": true,
      "pdf": true
    }
  }
}